{{> menu}}

<form class="ui stacked segment form" action="/settings/{{./member.id}}/updatemember" method="POST">
  <div class="two fields">
    <div class="field">
      <label>Name</label>
      <input placeholder={{member.name}} type="text" name="name" value= {{member.name}}>
    </div>
    <div class="field">
      <label>Gender</label>
      <input placeholder="Gender" type="text" name="gender" value="{{member.gender}}">
    </div>
    <div class="field">
      <label>Password</label>
      <input placeholder="00" type="password" name="password" value="{{member.password}}">
    </div>
      <label>Address</label>
      <input placeholder="Address" type="text" name="address" value="{{member.address}}">
    </div>
    <div class="field">
      <label>Height</label>
      <input placeholder="Height" type="text" name="height" value="{{member.height}}">
    </div>
    <div class="field">
      <label>Starting Weight</label>
      <input placeholder="startingWeight" type="text" name="startingWeight" value="{{member.startingWeight}}">
    </div>
  </div>
  <button class="ui blue submit button">Update Member Info</button>
</form>


